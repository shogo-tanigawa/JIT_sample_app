<h1>記事一覧</h1>
<div class="col-md-4 col-md-offset-4">
  <%= link_to "記事新規作成", new_article_path, class: "btn- btn-lg btn-block btn-primary" %>
</div>
<div class="col-md-8 col-md-offset-2">
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>詳細表示</th>
        <th>タイトル</th>
        <th>内容</th>
        <th>画像</th>
        <th>編集・削除</th>
      </tr>
    </thead>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to "詳細", article_path(article), class: "btn btn-lg btn-primary" %></td>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= image_tag url_for(article.image) if article.image.attached? %></td>
        <td>
        <%= link_to "編集", edit_article_path(article), class: "btn btn-lg btn-success" %>
        <%= link_to "削除", article, method: :delete,
            data: { confirm: "削除してよろしいですか？" },
            class: "btn btn-lg btn-danger delete-btn" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
